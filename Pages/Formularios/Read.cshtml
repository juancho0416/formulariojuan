@page "{id:int}"
@model form.Pages.Formularios.ReadModel

<h2>Detalle del Formulario</h2>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Formulario #@Model.Formulario.Id</h5>
        <p><strong>Área:</strong> @Model.Formulario.Area</p>
        <p><strong>Empresa:</strong> @Model.Formulario.Empresa</p>
        <p><strong>ISO:</strong> @Model.Formulario.ISO</p>
        <p><strong>NOM:</strong> @Model.Formulario.NOM</p>
        <p><strong>Contrato:</strong> @Model.Formulario.Contrato</p>
        <p><strong>Solicitud:</strong> @Model.Formulario.Solicitud</p>
        <p><strong>Requerimiento:</strong> @Model.Formulario.Requerimiento</p>
        <p><strong>Permiso:</strong> @Model.Formulario.Permiso</p>
        <p><strong>Petición:</strong> @Model.Formulario.Peticion</p>
        <p><strong>Correo:</strong> @Model.Formulario.Correo</p>
    </div>
</div>

<p class="mt-3">

    <a asp-page="Edit" asp-route-id="@Model.Formulario.Id" class="btn btn-warning">Editar</a>
    <a asp-page="Delete" asp-route-id="@Model.Formulario.Id" class="btn btn-danger">Eliminar</a>
    <a asp-page="Index" class="btn btn-secondary">Volver a la lista</a>
</p>